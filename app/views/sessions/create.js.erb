<%if @user%>
	$("p#login-body").html("");
	$("div.modal").modal('toggle');
	$("div.navbar").replaceWith("<%= j render "layouts/navbar" %>");
	$("div.content").html("").append("<%= j render(template: "users/show_profile") %>");
<%else%>
	$("p#flash").html("").append("<%=flash[:msg]%>");
	<%flash.discard(:msg)%>
<%end%>