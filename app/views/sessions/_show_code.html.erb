<div class="show">
  <p id="code" class="alert"><%= session[:auth_cod]%></p>
  <%= form_tag( url_for(controller: "sessions", action: "create"), :class => 'form-horizontal', remote: true) do %>
      <div class="control-group">
        <%= label_tag :auth_cod, "Code", :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag :auth_cod, nil, :placeholder => 'Enter Code here in 30 sec...', :class => 'text_field' %>
        </div>
      </div>
      <%= hidden_field_tag(:user_id, @user.id) %>
      <div class="form-actions">
        <%= submit_tag "Submit", :class => 'btn btn-primary' %>
      </div>
  <% end %>
</div>